{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.2",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
